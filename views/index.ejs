<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>电影频道</title>
    <link href="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include header %>

    <div class="container marketing">
      <div class="row">
        <% list.forEach(function(item,idx){ %>
          <div class="col-lg-4">
            <img class="img-circle" src="<%- item.images.large %>" width="140" height="140">
            <h2><%- item.title %></h2>
            <p><%- item.original_title %></p>
            <p><a class="btn btn-default" href="./movie_detail?id=<%- item.id %>" role="button">View details »</a></p>
          </div>
        <%})%>

      </div>
      <ul class="pagination">
          
            <li><a href=".?pageNo=1">首页</a></li>
            <li><a href=".?pageNo=<%= pageNo > 1 ? parseInt(pageNo)-1: 1 %>">上一页</a></li>
            <li><a href=".?pageNo=<%= pageNo < totalPages ? parseInt(pageNo)+1: totalPages %>">下一页</a></li>
            <li><a href=".?pageNo=<%=totalPages%>">尾页</a></li>
            <%= pageNo%> / <%=totalPages%> 共 <%=count%>记录
        </ul>
    </div>
    <%- include footer %>
    
    <script src="http://cdn.static.runoob.com/libs/jquery/2.1.1/jquery.min.js"></script>
     
    <!-- 最新的 Bootstrap 核心 JavaScript 文件 -->
    <script src="http://cdn.static.runoob.com/libs/bootstrap/3.3.7/js/bootstrap.min.js"></script>
  </body>
</html>
